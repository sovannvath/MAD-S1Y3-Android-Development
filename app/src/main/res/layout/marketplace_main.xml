<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Include Status Bar -->
        <include layout="@layout/status_bar" />

        <!-- Include Search and Login/Register Area -->
        <include layout="@layout/search_login_section" />

        <!-- Include Categories Section -->
        <include layout="@layout/categories_section" />

        <!-- Include Pet Accessories Section -->
        <include layout="@layout/pet_accessories_section" />

        <!-- Include Sales Items Section -->
        <include layout="@layout/sales_items_section" />

        <!-- Include Bottom Navigation Bar -->
        <include layout="@layout/bottom_navigation" />
    </LinearLayout>
</ScrollView>